{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Northworks Content Schema",
  "description": "Comprehensive schema for all content types in the Northworks website",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Content metadata and classification",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the content piece"
        },
        "type": {
          "type": "string",
          "enum": [
            "interview", 
            "review", 
            "article", 
            "biography", 
            "project", 
            "publication", 
            "contact", 
            "index",
            "technical"
          ],
          "description": "Primary content type"
        },
        "category": {
          "type": "string",
          "enum": [
            "classical-music",
            "risk-analysis", 
            "professional",
            "personal",
            "navigation"
          ],
          "description": "Content category"
        },
        "subcategory": {
          "type": "string",
          "description": "More specific classification",
          "examples": [
            "opera-review",
            "symphony-review", 
            "pianist-interview",
            "conductor-interview",
            "government-project",
            "academic-publication",
            "feature-article"
          ]
        },
        "status": {
          "type": "string",
          "enum": ["published", "draft", "archived"],
          "default": "published"
        },
        "featured": {
          "type": "boolean",
          "description": "Whether this content should be featured prominently"
        }
      },
      "required": ["id", "type", "category"]
    },
    "content": {
      "type": "object",
      "description": "Main content information",
      "properties": {
        "title": {
          "type": "string",
          "description": "Main title of the content"
        },
        "subtitle": {
          "type": "string",
          "description": "Secondary title or subtitle"
        },
        "headline": {
          "type": "string",
          "description": "Published headline (may differ from title)"
        },
        "summary": {
          "type": "string",
          "description": "Brief summary or excerpt"
        },
        "body": {
          "type": "string",
          "description": "Main content body (HTML/Markdown)"
        },
        "excerpt": {
          "type": "string",
          "description": "Short excerpt for listings"
        }
      },
      "required": ["title", "body"]
    },
    "publication": {
      "type": "object",
      "description": "Publication information",
      "properties": {
        "date": {
          "type": "string",
          "format": "date",
          "description": "Publication date (YYYY-MM-DD)"
        },
        "publishedDate": {
          "type": "string",
          "format": "date",
          "description": "Original publication date if different"
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Content creation timestamp"
        },
        "updated": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp"
        },
        "publisher": {
          "type": "string",
          "description": "Publishing organization",
          "examples": [
            "Bay Area News Group",
            "Oakland Tribune", 
            "ANG Newspapers",
            "Inside Bay Area",
            "Contra Costa Times"
          ]
        },
        "publication": {
          "type": "string",
          "description": "Specific publication name"
        },
        "section": {
          "type": "string",
          "description": "Publication section",
          "examples": ["Preview Section", "Classical Music Column", "Arts"]
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Original publication URL"
        }
      }
    },
    "author": {
      "type": "object",
      "description": "Author information",
      "properties": {
        "name": {
          "type": "string",
          "description": "Author name"
        },
        "byline": {
          "type": "string",
          "description": "Published byline"
        },
        "bio": {
          "type": "string",
          "description": "Author biography"
        }
      }
    },
    "subject": {
      "type": "object",
      "description": "Content subject information (for interviews/reviews)",
      "properties": {
        "people": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Person's name"
              },
              "role": {
                "type": "string",
                "description": "Their role or profession",
                "examples": [
                  "pianist", "conductor", "soprano", "baritone", 
                  "composer", "violinist", "opera singer"
                ]
              },
              "instrument": {
                "type": "string",
                "description": "Primary instrument"
              },
              "nationality": {
                "type": "string",
                "description": "Nationality"
              }
            }
          }
        },
        "organizations": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Musical organizations mentioned",
          "examples": [
            "San Francisco Symphony",
            "San Francisco Opera", 
            "Oakland East Bay Symphony",
            "Berkeley Opera"
          ]
        },
        "venues": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Performance venues",
          "examples": [
            "Davies Symphony Hall",
            "War Memorial Opera House",
            "Carnegie Hall"
          ]
        }
      }
    },
    "performance": {
      "type": "object",
      "description": "Performance/event details (for reviews)",
      "properties": {
        "date": {
          "type": "string",
          "format": "date",
          "description": "Performance date"
        },
        "venue": {
          "type": "string",
          "description": "Performance venue"
        },
        "organization": {
          "type": "string",
          "description": "Performing organization"
        },
        "program": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "composer": {
                "type": "string"
              },
              "work": {
                "type": "string"
              },
              "movement": {
                "type": "string"
              },
              "soloist": {
                "type": "string"
              }
            }
          }
        },
        "conductor": {
          "type": "string",
          "description": "Conductor name"
        },
        "soloists": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cast": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "singer": {
                "type": "string"
              },
              "role": {
                "type": "string"
              },
              "voice_type": {
                "type": "string",
                "enum": ["soprano", "mezzo-soprano", "alto", "tenor", "baritone", "bass"]
              }
            }
          }
        }
      }
    },
    "technical": {
      "type": "object",
      "description": "Technical/professional content details",
      "properties": {
        "projectType": {
          "type": "string",
          "enum": [
            "government-consulting",
            "academic-research", 
            "risk-assessment",
            "decision-analysis",
            "environmental-study",
            "nuclear-safety",
            "publication"
          ]
        },
        "client": {
          "type": "string",
          "description": "Client organization",
          "examples": ["EPA", "DOE", "NRC", "NASA", "Stanford University"]
        },
        "timeframe": {
          "type": "object",
          "properties": {
            "start": {
              "type": "string",
              "format": "date"
            },
            "end": {
              "type": "string", 
              "format": "date"
            }
          }
        },
        "methodology": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Research or analysis methods used"
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Technical keywords"
        }
      }
    },
    "media": {
      "type": "object",
      "description": "Associated media files",
      "properties": {
        "images": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "description": "Image file path"
              },
              "alt": {
                "type": "string",
                "description": "Alt text"
              },
              "caption": {
                "type": "string",
                "description": "Image caption"
              },
              "width": {
                "type": "integer"
              },
              "height": {
                "type": "integer"
              },
              "type": {
                "type": "string",
                "enum": ["thumbnail", "hero", "gallery", "portrait", "logo"]
              }
            }
          }
        },
        "documents": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "description": "Document file path"
              },
              "title": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": ["pdf", "doc", "presentation"]
              },
              "size": {
                "type": "string",
                "description": "File size (e.g., '782k')"
              }
            }
          }
        },
        "audio": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "duration": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Content tags for categorization and search"
    },
    "related": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "IDs of related content pieces"
    },
    "seo": {
      "type": "object",
      "description": "SEO and web-specific metadata",
      "properties": {
        "metaTitle": {
          "type": "string",
          "description": "SEO title"
        },
        "metaDescription": {
          "type": "string",
          "description": "SEO description"
        },
        "slug": {
          "type": "string",
          "description": "URL slug"
        },
        "canonicalUrl": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "legacy": {
      "type": "object",
      "description": "Legacy format preservation",
      "properties": {
        "originalFile": {
          "type": "string",
          "description": "Original filename"
        },
        "htmlStructure": {
          "type": "object",
          "description": "Preserved HTML table structure metadata"
        },
        "comments": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "HTML comments from original files"
        }
      }
    }
  },
  "required": ["metadata", "content"],
  "additionalProperties": false
}
